drop_trigger(name) := <<
  drop trigger if exists <name>
>>

create_insert_trigger(name, table, tableColumn, view, viewColumn, message) := <<
  create trigger if not exists <name>
  after insert on <table>
  when <expr()>
  begin
    <statement()>
  end
>>

create_update_trigger(name, table, tableColumn, view, viewColumn, message) := <<
  create trigger if not exists <name>
  after update on <table>
  when <expr()>
  begin
    <statement()>
  end
>>

