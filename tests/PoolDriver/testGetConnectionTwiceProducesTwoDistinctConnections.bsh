#!/bin/sh
set -e
bsh -classpath pjdbc.jar <<EOF
    try {
	source("init.bsh");
	import java.sql.*;
	getClass("org.pjdbc.drivers.MockDriver");
	getClass("org.pjdbc.drivers.PoolDriver");
	Connection foo1 = DriverManager.getConnection("jdbc:pool:jdbc:mock:foo");
	Connection foo2 = DriverManager.getConnection("jdbc:pool:jdbc:mock:foo");
	assert(foo1!=null);
	assert(foo2!=null);
	assert(foo1!=foo2);
    } catch (e) {System.exit(1);}
EOF

# Local Variables:
# mode: java
# End:
