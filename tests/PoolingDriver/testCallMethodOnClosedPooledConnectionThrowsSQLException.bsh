#!/bin/sh
set -e
bsh -classpath pjdbc.jar <<EOF
    try {
	source("tests/init.bsh");
	import java.sql.*;
	getClass("org.pjdbc.drivers.MockDriver");
	getClass("org.pjdbc.drivers.PoolDriver");
	Connection foo = DriverManager.getConnection("jdbc:pool:jdbc:mock:foo");
	foo.close();
	try {foo.createStatement();} catch (SQLException e) {return;}
	assert(false);
    } catch (e) {System.exit(1);}
EOF

