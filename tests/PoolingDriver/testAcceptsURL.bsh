#!/bin/sh
set -e
bsh -classpath pjdbc.jar <<EOF
    try {
	source("tests/init.bsh");
	import java.sql.*;
	import org.pjdbc.drivers.*;
	new MockDriver();
	getClass("org.pjdbc.drivers.MockDriver");
	assert(!new PoolDriver().acceptsURL("jdbc:pool"));
	assert(!new PoolDriver().acceptsURL("jdbc:pool:"));
	assert(!new PoolDriver().acceptsURL("jdbc:pool:foo"));
	assert((new PoolDriver().acceptsURL("jdbc:pool:jdbc:mock:foo")));
    } catch (e) {System.exit(1);}
EOF

# Local Variables:
# mode: java
# End:
