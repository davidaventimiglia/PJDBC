#!/bin/sh
set -e
bsh -classpath pjdbc.jar <<EOF
    try {
	source("init.bsh");
	import java.sql.*;
	getClass("org.pjdbc.drivers.MockDriver");
	getClass("org.pjdbc.drivers.SinkDriver");
	assertNotNull(DriverManager.getConnection("jdbc:sink:jdbc:mock:foo"));
    } catch (e) {System.exit(1);}
EOF

